{
  "name": "workplace-chat",
  "version": "0.0.2",
  "description": "Unofficial client for Facebook Workspace Chat for Linux",
  "homepage": "https://github.com/silentmanww/workplace-chat-for-linux",
  "keywords": [
    "workplace",
    "facebook workplace",
    "workspace linux",
    "facebook workplace linux",
    "workspace chat",
    "facebook workplace chat",
    "workspace chat linux",
    "facebook workplace chat linux"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://github.com/silentmanww/workplace-chat-for-linux"
  },
  "author": "Angelo Theodorakis <silentmanww@gmail.com>",
  "license": "SEE LICENSE IN LICENSE.md",
  "scripts": {
    "start": "electron ./app",
    "pack": "build --dir",
    "dist": "build"
  },
  "devDependencies": {
    "electron": "^1.4.15",
    "electron-builder": "^13.11.1"
  },
  "build": {
    "appId": "Workplace Chat",
    "asar": false,
    "icon": "/usr/share/icons/workchat.png",
    "linux": {
      "category": "Network",
      "executableName": "Workplace Chat",
      "desktop": {
        "Name": "Workplace Chat for Linux",
        "Comment": "Unofficial client for Workplace Chat for Linux",
        "StartupWMClass": "Workplace Chat" 
      },
      "target": [
        "tar.gz"
      ]
    }
  },
  "dependencies": {
    "wmctrl": "0.0.3"
  }
}
